<h1>Let's go... Lunching!</h1>

<div id='pic'><img width=700 src="<%=@pic%>" title="om nom"/></div>
<% @groups.each do |group| %>
  <div class=group>
    <h3>Lunch Group <span class=name><%=group.name%></span> @ <span class=place><%=group.place%></span></h3>
      <ul>
      <% group.players.each do |player| %>
        <li class=player><%= player.name %> , <%= player.department%> , <%= player.leader %></li>
      <% end %>
      </ul>
  </div>
<% end %>
